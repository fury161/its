@{
    Layout = null;
}
<div>
    <div class="row">
        <div class="col-md-10">
            <div class="well bs-component">
                <div ng-form="newIncidentForm" class="form-horizontal">
                    <legend>Регистриране на нов инцидент</legend>
                    <div class="form-group row">
                        <label class="col-md-2">Тема</label>
                        <input class="col-md-8" ng-model="incidentSubject" name="incidentSubjectEdit" placeholder="Тема - написаното тук идентифицира инцидента в списъка" type="text" />
                    </div>
                    <div class="row alert-warning">
                        <label class="col-md-12 text-danger">Попълването на полето "тема" е задължително</label>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2">Описание</label>
                        <textarea cols="80" , rows="10" class="col-md-8" ng-model="incidentDescription" name="incidentDescriptionEdit" placeholder="Описание на инцидента"></textarea>
                    </div>
                    <div class="row alert-warning">
                        <label class="col-md-12 text-danger" ng-show="loginPasswordHasErrors(2)">Попълването на полето с описание на инцидента трябва да съдържа достатъчно данни.</label>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button class="btn btn-primary" ng-click="doLogin()">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <legend>Необработени инциденти</legend>
    </div>
    <div id="grid1"></div>

    <script>
        $(document).ready(function () {
            $("#grid1").kendoGrid({
                height: 350,
                reorderable: true,
                scrollable: true,
                columns: [
                    {
                        field: "FirstName",
                        title: "First Name"
                    },
                {
                    field: "LastName",
                    title: "Last Name"
                }
                ],
                dataSource: {
                    data: [
                        { FirstName: "Joe", LastName: "Smith" },
                        { FirstName: "Joe", LastName: "Smith" },
                        { FirstName: "Joe", LastName: "Smith" },
                        { FirstName: "Joe", LastName: "Smith" },
