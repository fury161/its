@{ 
    Layout = null;
}
<div>
    <div class="row">
        <div class="col-md-10">
            <div class="well bs-component">
                <div ng-form="loginForm" class="form-horizontal">
                    <legend>Login</legend>
                    <div class="form-group row">
                        <label class="col-md-2">User name</label>
                        <input class="col-md-4" ng-model="loginName" name="loginNameEdit" placeholder="User name" type="text" ng-change="loginNameChange()">
                    </div>
                    <div class="row alert-warning" style="margin-bottom: 10px">
                        <label class="col-md-12 text-danger" ng-show="loginNameHasErrors(2)">Полето за име на потребителя е задължително</label>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2">Password</label>
                        <input class="col-md-4" ng-model="loginPassword" name="loginPasswordEdit" placeholder="Password" type="password" ng-change="loginPasswordChange()">
                    </div>
                    <div class="row alert-warning">
                        <label class="col-md-12 text-danger" ng-show="loginPasswordHasErrors(2)">Полето за парола е задължително</label>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button class="btn btn-primary" ng-click="doLogin()">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h6>User name: {{ loginName }}, error: {{$error}}</h6>
    <h6>Author: {{author}}, local date: {{localDate | date: 'dd/MM/yyyy HH:mm'}}</h6>
</div>